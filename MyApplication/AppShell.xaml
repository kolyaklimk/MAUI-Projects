<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyApplication"
    FlyoutBackgroundColor="#202020">

    <FlyoutItem Title="Calculator">
        <ShellContent
            Title="Calculator"
            ContentTemplate="{DataTemplate local:CalculatorPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="ProgressBar">
        <ShellContent
            Title="ProgressBar"
            ContentTemplate="{DataTemplate local:ProgressBarPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="SQLite">
        <ShellContent
            Title="SQLite"
            ContentTemplate="{DataTemplate local:SQLitePage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Currency Converter">
        <ShellContent
            Title="Currency Converter"
            ContentTemplate="{DataTemplate local:CurrencyConverterPage}"/>
    </FlyoutItem>

</Shell>
